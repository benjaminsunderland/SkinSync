<p id="notice"><%= notice %></p>

<h1>Tattoos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tattoos.each do |tattoo| %>
      <tr>
        <td><%= tattoo.name %></td>
        <td><%= tattoo.image_link %></td>
        <td><%= link_to 'Show', tattoo %></td>
        <td><%= link_to 'Edit', edit_tattoo_path(tattoo) %></td>
        <td><%= link_to 'Destroy', tattoo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tattoo', new_tattoo_path %>
